<Window x:Class="ControllerApplication.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Twitch Login" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Please click the button below to log in using your Twitch account." Margin="0 0 0 10" TextWrapping="Wrap"/>
            <Button Content="Login with Twitch" Width="200" HorizontalAlignment="Center" Click="LoginWithTwitch_Click"/>
            <TextBlock Text="After logging in on Twitch, close the browser and this window will update automatically." Margin="0 10 0 0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
